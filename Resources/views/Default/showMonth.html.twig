{% extends 'SoloistCalendarBundle::layout.html.twig' %}
{% block soloist_calendar_layout %}
<h1>
    {% if calendar is defined %}
        {{ calendar.title }}
    {% else %}
        {% trans %}soloist.calendar.all_events{% endtrans %}
    {% endif %}
</h1>
<table class="soloist-calendar">
    {% include 'SoloistCalendarBundle:Default:calendar_header.html.twig' %}
    <tbody>
        {% for week in month %}
            <tr>
                {% for day in week %}
                    <td>
                        {% if month.contains(day.begin) %}
                            {{ day.begin.format('d') }}
                            <ul class="soloist-calendar-events">
                                {% for events in calendr_events(day, options) %}
                                    <li>
                                        <a href="{{ path('soloist_calendar_event_show', { 'slug': event.slug }) }}">
                                            {{ event.title }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
