<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="soloist_backend_calendar_index" pattern="/">
        <default key="_controller">SoloistCalendarBundle:Backend/Calendar:index</default>
    </route>

    <route id="soloist_backend_calendar_new" pattern="/new">
        <default key="_controller">SoloistCalendarBundle:Backend/Calendar:new</default>
    </route>

    <route id="soloist_backend_calendar_create" pattern="/create">
        <default key="_controller">SoloistCalendarBundle:Backend/Calendar:create</default>
    </route>

    <route id="soloist_backend_calendar_edit" pattern="/edit/{id}">
        <default key="_controller">SoloistCalendarBundle:Backend/Calendar:edit</default>
    </route>

    <route id="soloist_backend_calendar_update" pattern="/update/{id}">
        <default key="_controller">SoloistCalendarBundle:Backend/Calendar:update</default>
    </route>

    <route id="soloist_backend_calendar_delete" pattern="/delete/{id}">
        <default key="_controller">SoloistCalendarBundle:Backend/Calendar:delete</default>
    </route>

</routes>
